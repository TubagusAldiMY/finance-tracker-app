{
  "openapi": "3.0.3",
  "info": {
    "title": "Finance Tracking App",
    "description": "Project R&D tracking keuangan. Standard: Clean Architecture",
    "version": "1.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/api/users/register": {
      "post": {
        "tags": ["User API"],
        "description": "Register new user. ID is auto-generated by backend.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "minLength": 8 }
                },
                "required": ["username", "email", "password"]
              },
              "example": {
                "username": "firlan",
                "email": "firlan@gmail.com",
                "password": "secret123"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success register new user",
            "content": {
              "application/json": {
                "example": {
                  "id": "7c1a0c5e-2c44-4d3e-b7d6-8d8f3c4a1234",
                  "username": "firlan",
                  "email": "firlan@gmail.com",
                  "createdAt": "2026-01-03T08:30:00Z"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request (Validation Error)",
            "content": {
              "application/json": {
                "example": {
                  "message": "Validation failed",
                  "errors": {
                    "email": "Invalid email format",
                    "password": "Minimum 8 characters"
                  }
                }
              }
            }
          },
          "409": {
            "description": "Email already exists",
            "content": {
              "application/json": {
                "example": {
                  "message": "Email already registered"
                }
              }
            }
          }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "description": "Login user using Email and Password",
        "tags": ["User API"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": { "token": { "type": "string" } }
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized (Wrong credentials)" }
        }
      }
    },
    "/api/users/current": {
      "get": {
        "tags": ["User API"],
        "description": "Get current user profile based on Token",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Success get current user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          }
        }
      },
      "patch": {
        "tags": ["User API"],
        "description": "Update current user profile",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success update user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/budgets": {
      "post": {
        "tags": ["Monthly Budget API"],
        "description": "Create monthly budget",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "budget": {
                    "type": "number",
                    "description": "Total budget amount"
                  },
                  "date": {
                    "type": "string",
                    "format": "date-time",
                    "description": "ISO8601 String"
                  }
                },
                "required": ["budget", "date"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success create budget",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/BudgetResponse" }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Monthly Budget API"],
        "description": "List monthly budgets",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "date_from",
            "in": "query",
            "schema": { "type": "string", "format": "date-time" }
          },
          {
            "name": "date_to",
            "in": "query",
            "schema": { "type": "string", "format": "date-time" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success list budgets",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/BudgetEntity" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/budgets/{budget_id}": {
      "get": {
        "tags": ["Monthly Budget API"],
        "description": "Get budget detail",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "budget_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success get budget",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/BudgetResponse" }
              }
            }
          }
        }
      },
      "patch": {
        "tags": ["Monthly Budget API"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "budget_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "budget": { "type": "number" },
                  "date": { "type": "string", "format": "date-time" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success update budget",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/BudgetResponse" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Monthly Budget API"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "budget_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success delete budget",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "data": { "type": "boolean" } }
                }
              }
            }
          }
        }
      }
    },
    "/api/budgets/{budget_id}/history": {
      "post": {
        "tags": ["History API"],
        "description": "Add expense/history to a budget",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "budget_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": { "type": "string", "format": "date-time" },
                  "amount": { "type": "number" }
                },
                "required": ["date", "amount"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success create history",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HistoryResponse" }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["History API"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "budget_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "date_from",
            "in": "query",
            "schema": { "type": "string", "format": "date-time" }
          },
          {
            "name": "date_to",
            "in": "query",
            "schema": { "type": "string", "format": "date-time" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success list history",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/HistoryEntity" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/history/{history_id}": {
      "get": {
        "tags": ["History API"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "history_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success get history",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HistoryResponse" }
              }
            }
          }
        }
      },
      "patch": {
        "tags": ["History API"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "history_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": { "type": "string", "format": "date-time" },
                  "amount": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success update history",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/HistoryResponse" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["History API"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "history_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success delete history",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "data": { "type": "boolean" } }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UserResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "username": { "type": "string" },
              "email": { "type": "string", "format": "email" },
              "created_at": { "type": "string", "format": "date-time" },
              "deleted_at": {
                "type": "string",
                "format": "date-time",
                "nullable": true
              }
            }
          }
        }
      },
      "BudgetEntity": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "budget": { "type": "number" },
          "date": { "type": "string", "format": "date-time" },
          "user_id": { "type": "string" }
        }
      },
      "BudgetResponse": {
        "type": "object",
        "properties": {
          "data": { "$ref": "#/components/schemas/BudgetEntity" }
        }
      },
      "HistoryEntity": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "date": { "type": "string", "format": "date-time" },
          "amount": { "type": "number" },
          "budget_id": { "type": "string" }
        }
      },
      "HistoryResponse": {
        "type": "object",
        "properties": {
          "data": { "$ref": "#/components/schemas/HistoryEntity" }
        }
      }
    }
  }
}
