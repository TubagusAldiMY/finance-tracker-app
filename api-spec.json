    "/api/budgets": {
      "post": {
        "tags": ["Monthly Budget API"],
        "description": "Create monthly budget (Monthly_Budget) for current user",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "budget": { "type": "number" },
                  "date": { "type": "number", "description": "Epoch timestamp (representing the month)" }
                },
                "required": ["budget", "date"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success create monthly budget",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string" },
                        "budget": { "type": "number" },
                        "date": { "type": "number" },
                        "user_id": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Monthly Budget API"],
        "description": "List monthly budgets of current user",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "name": "date_from",
            "in": "query",
            "required": false,
            "schema": { "type": "number" },
            "description": "Epoch timestamp filter start"
          },
          {
            "name": "date_to",
            "in": "query",
            "required": false,
            "schema": { "type": "number" },
            "description": "Epoch timestamp filter end"
          }
        ],
        "responses": {
          "200": {
            "description": "Success list monthly budgets",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "budget": { "type": "number" },
                          "date": { "type": "number" },
                          "user_id": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

