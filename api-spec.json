{
  "openapi": "3.0.3",
  "info": {
    "title": "Finance Tracking App",
    "description": "Peruntukan : project R&D untuk tracking keuangan dengan budget bulanan (berdasarkan LRS: Users, Monthly_Budget, history)",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/api/users": {
      "post": {
        "tags": ["User API"],
        "description": "Register new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "username": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["id", "username", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success register new user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string" },
                        "username": { "type": "string" },
                        "email": { "type": "string" },
                        "created_at": { "type": "number" },
                        "deleted_at": { "type": "number", "nullable": true }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "Logout user",
        "tags": ["User API"],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Success logout user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "data": { "type": "boolean" } }
                }
              }
            }
          }
        }
      }
    },

